@using FollowMyTv.WebApp
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content( "~/Content/Site.css" )" rel="stylesheet" type="text/css" />
    <link href="@Url.Content( "~/Content/PIFollowMyTv.css" )" rel="stylesheet" type="text/css" />
    <script src="@Url.Content( "~/Scripts/jquery-1.5.1.min.js" )" type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/search.js")' type="text/ecmascript"></script>

    @RenderSection( "IncludeScripts", false )
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    Follow My Tv</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial( "_LogOnPartial" )
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    @Html.Partial( "_LayoutUserActions" )
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>